<?xml version="1.0" encoding="utf-8"?>
<!-- The Styles to use for the Magenta theme -->
<resources>
    <style name="AppTheme.Magenta" parent="AppTheme.Light">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>
        <item name="colorAccentDim">@color/theme_magenta_accent_dim</item>

        <item name="themeStyleColorSidebarToolbar">@color/theme_magenta_side_bar_toolbar_background</item>

        <item name="themeStyleColorLinkIcon">@color/theme_magenta_link_icon</item>

        <item name="themeStyleColorBackgroundFindOnPage">@color/theme_magenta_find_on_page_background</item>
        <item name="themeStyleColorIconFindOnPage">@color/theme_magenta_find_on_page_icon</item>

        <item name="themeStyleColorCatalogItemBackground">@color/theme_magenta_catalog_item_background</item>

        <!-- Sign In -->
        <item name="signinButtonBackgroundColor">@color/theme_magenta_accent</item>
        <item name="signinLinkTextColor">@color/theme_magenta_accent</item>
    </style>

    <style name="AppTheme.Magenta.Search" parent="AppTheme.Light.Search">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>
    </style>

    <style name="AppTheme.Magenta.Settings" parent="AppTheme.Light.Settings">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>
    </style>

    <style name="AppTheme.Magenta.Dialog" parent="AppTheme.Light.Dialog">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>

        <item name="android:background">@color/theme_light_background_dialog</item>
    </style>

    <style name="AppTheme.Magenta.Dialog.Alert" parent="AppTheme.Light.Dialog.Alert">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>

        <item name="android:background">@color/theme_light_background_dialog</item>
    </style>


    <!-- Toolbar -->
    <style name="AppTheme.Magenta.Widget.Toolbar" parent="AppTheme.Light.Widget.Toolbar">
        <item name="colorPrimary">@color/theme_magenta_primary</item>
        <item name="colorPrimaryDark">@color/theme_magenta_primary_dark</item>
        <item name="colorAccent">@color/theme_magenta_accent</item>
    </style>

    <style name="AppTheme.Magenta.Widget.Toolbar.ActionMode" parent="AppTheme.Light.Widget.Toolbar.ActionMode">
        <item name="titleTextStyle">@style/AppTheme.Magenta.Widget.Toolbar.ActionMode.Title</item>
    </style>

    <style name="AppTheme.Magenta.Widget.Toolbar.Dim">
    </style>

    <style name="AppTheme.Magenta.Widget.Toolbar.ActionMode.Overflow" parent="AppTheme.Light.Widget.Toolbar.ActionMode.Overflow">
    </style>


    <!-- Text -->
    <style name="AppTheme.Magenta.Widget.Toolbar.ActionMode.Title" parent="AppTheme.Light.Widget.Toolbar.ActionMode.Title">
        <item name="android:textColor">@color/theme_magenta_primary</item>
    </style>



    <style name="AppTheme.Magenta.PopupMenu" parent="AppTheme.Light.PopupMenu">
        <item name="android:popupBackground">@color/theme_magenta_background_dialog</item>
    </style>
</resources>