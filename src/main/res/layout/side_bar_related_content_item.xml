<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/refContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/themeStyleColorSidebarReferenceBackground"
            android:orientation="vertical"
            android:padding="16dp"
            android:textColor="?attr/themeStyleColorTextItemSubTitle"
            android:textSize="12sp"
            tools:text="2 Ne. 11:3; Jacob 7:5. TG Jesus Christ, Appearances, Antemortal."
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/refItemContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
        </ScrollView>
    </LinearLayout>
</ScrollView>