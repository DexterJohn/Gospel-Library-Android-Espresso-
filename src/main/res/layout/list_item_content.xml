<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/themeStyleColorBackground"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">

    <View
        android:id="@+id/content_item_indentation_spacing"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_item_title"
            style="?attr/themeStyleWidgetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/themeStyleColorTextItemTitle"
            tools:text="The Title"/>

        <TextView
            android:id="@+id/content_item_sub_title"
            style="?attr/themeStyleWidgetTextSubtle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/themeStyleColorTextItemSubTitle"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="The subtitle"
            tools:visibility="visible"/>
    </LinearLayout>
</LinearLayout>