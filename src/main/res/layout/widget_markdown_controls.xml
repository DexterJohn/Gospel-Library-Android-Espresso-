<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/markdown_controls_bold"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_lds_format_bold_24dp"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/markdown_controls_italic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_lds_format_italic_24dp"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/markdown_controls_unordered_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_lds_list_bullet_24dp"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/markdown_controls_ordered_list"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_lds_list_number_24dp"
            tools:ignore="ContentDescription"/>
    </LinearLayout>
</RelativeLayout>