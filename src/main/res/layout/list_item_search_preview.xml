<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/searchItemLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="?attr/themeStyleColorBackground"
                                             android:foreground="?attr/selectableItemBackground"
                                             android:minHeight="48dp"
                                             >

    <TextView
        android:id="@+id/titleTextView"
        style="?attr/themeStyleWidgetText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textColor="?attr/themeStyleColorTextItemTitle"
        app:layout_constraintBottom_toTopOf="@+id/previewTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/resultsTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:ignore="RtlHardcoded"
        tools:text="Give said the little stream, Give oh give, Give oh give!"/>

    <TextView
        android:id="@+id/previewTextView"
        style="?attr/themeStyleWidgetTextSubtle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textColor="?attr/themeStyleColorTextItemSubTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        tools:text="…id elit non mi porta gravida at eget metus. Aenean lacinia bibendum nulla sed consectetur. Morbi leo r……id elit non mi porta gravida at eget metus. Aenean lacinia bibendum nulla sed consectetur. Morbi leo r…"
        />

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextView"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2 results"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>
