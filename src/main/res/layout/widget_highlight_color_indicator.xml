<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="@dimen/highlight_palette_item_size"
                                             android:layout_height="@dimen/highlight_palette_item_size"
                                             android:id="@+id/backgroundView"
                                             tools:background="@drawable/highlight_item_background"
                                             tools:backgroundTint="@color/theme_light_highlight_blue"
                                             tools:layout_width="@dimen/highlight_palette_item_size">

    <ImageView
        android:id="@+id/checkmarkImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:tint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lds_action_done_24dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_lds_action_done_24dp"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>