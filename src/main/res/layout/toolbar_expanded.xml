<?xml version="1.0" encoding="utf-8"?>
<org.lds.mobile.ui.widget.toolbar.ToolbarExpand
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarExpand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mainToolbar"
    android:paddingBottom="@dimen/drop_shadow_height"
    app:background_color="?attr/colorPrimary"
    app:duration="150"
    app:push_down_bottom="false"
    app:shadow="@drawable/drop_shadow">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigationTrailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"/>

</org.lds.mobile.ui.widget.toolbar.ToolbarExpand>
